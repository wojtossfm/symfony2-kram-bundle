{% extends ':Default:index.html.twig' %}

{% block body -%}
    <h1>Payment list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Userid</th>
                <th>Typeid</th>
                <th>Amount</th>
                <th>Datecreated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('payment_entry_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.userId }}</td>
                <td>{{ entity.typeId }}</td>
                <td>{{ entity.amount }}</td>
                <td>{{ entity.dateCreated }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('payment_entry_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('payment_entry_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('payment_entry_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
