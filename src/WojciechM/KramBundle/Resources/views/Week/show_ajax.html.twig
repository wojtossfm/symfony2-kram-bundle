{% extends 'WojciechMKramBundle:Default:ajax_base.html.twig' %}

{% block content -%}
    <h1>Week</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ entity.start|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ entity.end|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fee</th>
                <td>{{ entity.fee }}</td>
            </tr>
        </tbody>
    </table>

<ul class="actions">
    <li>
    	{{ widgets.button_ready_edit('week_edit', entity.id) }}
    </li>
</ul>
{% endblock %}
