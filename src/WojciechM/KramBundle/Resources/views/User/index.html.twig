{% extends 'WojciechMKramBundle:Default:base.html.twig' %}

{% block content -%}
    <h1>User list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Isactive</th>
                <th>Isadmin</th>
                <th>Datecreated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.isActive }}</td>
                <td>{{ entity.isAdmin }}</td>
                <td>{% if entity.dateCreated %}{{ entity.dateCreated|date('Y-m-d H:i') }}{% endif %}</td>
                <td>
                <ul class="actions">
                    <li>
                    	{{ widgets.button_ready_show('user_show', entity.id) }}
                    </li>
                    <li>
                    	{{ widgets.button_ready_edit('user_edit', entity.id) }}
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul class="actions">
        <li>
            {{ widgets.button_ready_new('user_new') }}
        </li>
    </ul>
    {% endblock %}
